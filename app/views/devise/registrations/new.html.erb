<%= turbo_frame_tag "content" do %>

<h3>Sign up</h3>

<%= form_for(resource, as: resource_name, data: {turbo: false}, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class ="login_window" id="form_window">

  <div class="form_group">
    <%= f.label :email, style: "display: block" %>
    <%= f.email_field :email, autofocus: true, :class => "form_string", autocomplete: "email" %>
  </div>

  <div class="form_group">
  <%= f.label :first_name, style: "display: block" %>
  <%= f.text_field :first_name, :class => "form_string", autocomplete: "given-name" %>
  </div>

  <div class="form_group">
  <%= f.label :surname, style: "display: block" %>
  <%= f.text_field :surname, :class => "form_string", autocomplete: "family-name" %>
  </div>

  <div class="form_group">
    <div class="password_desc">
      <%= f.label :password%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <%= f.password_field :password, :class => "form_string", autocomplete: "new-password" %>
  </div>

  <div class="form_group">
    <%= f.label :password_confirmation, style: "display: block" %>
    <%= f.password_field :password_confirmation,:class => "form_string", autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up", :class => "strip_link square_button" %>
  </div>

  </div>

<% end %>

<% end %>