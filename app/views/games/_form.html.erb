<div class="card_container container" id="new_games_content">
<% if @error %>
        <%= @error %>
<% else %>
        <% @search_results_games.each do |game| %>
                <%= link_to rate_games_path(game_id:game["id"]), data:{turbo_frame: "modal"}, class: "strip_link" do %>
                        <div class="game_card card item_card">
                                <div class = "game_card_title">
                                        <h5> <%= game["name"][0]["value"] %></h5>
                                </div>
                                <div class="container profile_image game_image">
                                        <% if game["image"] %>
                                                <%= image_tag("#{game["image"][0]}", :class => "image_150") %>
                                        <% else %>
                                                <%= image_tag "no_game.svg", :class => "image_150" %>
                                        <% end %>
                                </div>
                                        <div class="container game_card_year">
                                                <%= game["yearpublished"][0]["value"] %>
                                        </div>
                        </div>
                <% end %>
        <% end %>
<% end %>
</div>

 